/**app.wxss**/
page {
    display: flex;
    flex-direction: column;
    height: 100%;
    width: 100%;
    background-color: #f1f1f1;
    font-family: -apple-system-font, Helvetica Neue, Helvetica, Microsoft YaHei, sans-serif;
    font-size: 0;
}
.loading{
    position: fixed;
    top:0;
    left:0;
    width: 100%;
    height: 100%;
    background-color: #fff;
}
.loading image{
    width: 120rpx;
    height:120rpx;
    position: absolute;
    top:50%;
    left: 50%;
    margin-top: -60rpx;
    margin-left: -60rpx;
}
.container {
    display: flex;
    flex: 1;
    flex-direction: column;
    box-sizing: border-box
}
image{
    margin: 0 auto;
}
navigator:hover{
    background-color: #fff;
}

.fl {
    float: left;
}

.fr {
    float: right;
}
.navigator-hover{
    background-color:rgba(0, 0, 0, 0.1);
    opacity:0.7;
}
/**遮罩层**/
.fullbg {
    position: fixed;
    top: 0;
    z-index: 100;
    width: 100%;
    height: 100%;
    background: rgba(1, 1, 1, 0.4);
    display: none;
}

.fullopacity {
    display: block;
}



/*几行显示*/
.sw{
    text-overflow: -o-ellipsis-lastline;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}
.m30{
    margin: 0 30rpx;
}